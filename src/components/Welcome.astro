---
import githubIcon from '../assets/icons/github-icon.svg';
import stravaIcon from '../assets/icons/strava-icon.svg';
import linkedInIcon from '../assets/icons/linkedin-icon.svg';
import instagramIcon from '../assets/icons/instagram-icon.svg';
import kurzigmantasIcon from '../assets/icons/kurzigmantas-icon.svg';
import { socialLinks } from '../config/social';

const iconMap = {
	github: githubIcon,
	linkedin: linkedInIcon,
	strava: stravaIcon,
	instagram: instagramIcon,
	kurzigmantas: kurzigmantasIcon,
};
---

<div class="container">
	<main>
		<section class="hero">
			<h1>Hi, I'm Jovaras!</h1>
			<nav class="links" aria-label="Social media links">
				{socialLinks.map((link) => (
					<a
						href={link.url}
						class={`link ${link.class}`}
						target="_blank"
						rel="noopener noreferrer"
						title={link.title}
					>
						<img src={iconMap[link.class as keyof typeof iconMap].src} alt={`${link.name} icon`} class="icon" />
						{link.name}
					</a>
				))}
			</nav>
		</section>	
	</main>
</div>

<style>
	/* CSS Custom Properties / Design Tokens */
	:root {
		--color-bg-primary: #000000;
		--color-bg-gradient-start: rgba(15, 23, 42, 0.4);
		--color-bg-gradient-mid: rgba(0, 0, 0, 0.95);
		--color-text-primary: #f1f5f9;
		--color-text-secondary: #e2e8f0;
		--color-accent: #60a5fa;
		
		--color-github: #B6BFB8;
		--color-linkedin: #0A66C2;
		--color-strava: #FC4C02;
		--color-instagram: #E1306C;
		--color-kurzigmantas: #B6BFB8;
		
		--font-size-heading: 22px;
		--spacing-sm: 8px;
		--spacing-md: 10px;
		--spacing-lg: 12px;
		--spacing-xl: 16px;
		--border-radius: 10px;
		
		--transition-fast: 0.2s;
		--transition-medium: 0.3s;
	}

	/* Layout */
	.container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: 
			radial-gradient(ellipse at center, var(--color-bg-gradient-start) 0%, var(--color-bg-gradient-mid) 70%, var(--color-bg-primary) 100%),
			var(--color-bg-primary);
	}

	main {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	/* Hero Section */
	.hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		gap: calc(var(--spacing-xl) * 2);
		padding: var(--spacing-xl);
	}

	h1 {
		font-size: var(--font-size-heading);
		margin: 0;
		color: var(--color-text-primary);
		text-align: center;
	}

	/* Social Links Navigation */
	.links {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: var(--spacing-xl);
		justify-content: center;
		width: 100%;
		max-width: 700px;
	}

	.link {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--spacing-lg) var(--spacing-xl);
		color: var(--color-text-secondary);
		text-decoration: none;
		transition: color var(--transition-fast);
		background: transparent;
		border-radius: var(--border-radius);
		white-space: nowrap;
	}

	.link:hover {
		color: var(--color-accent);
	}

	/* Focus Indicators for Accessibility */
	.link:focus-visible {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}

	/* Brand-Specific Hover Colors */
	.link.github:hover {
		color: var(--color-github);
	}

	.link.linkedin:hover {
		color: var(--color-linkedin);
	}

	.link.strava:hover {
		color: var(--color-strava);
	}

	.link.instagram:hover {
		color: var(--color-instagram);
	}

	.link.kurzigmantas:hover {
		color: var(--color-kurzigmantas);
	}

	/* Icon Styles */
	.icon {
		height: 1em;
		margin-right: var(--spacing-sm);
		transition: transform var(--transition-medium) ease;
	}

	/* Special Animation for kurzigmantas Icon */
	.link.kurzigmantas:hover .icon {
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	/* Responsive Design */
	
	/* Very small screens - force vertical stack */
	@media screen and (max-width: 480px) {
		.links {
			flex-direction: column;
			max-width: 280px;
		}

		.link {
			width: 100%;
			padding: calc(var(--spacing-lg) + 2px) var(--spacing-xl);
		}

		h1 {
			font-size: calc(var(--font-size-heading) + 2px);
		}
	}

	/* Small screens - allow wrapping */
	@media screen and (min-width: 481px) and (max-width: 768px) {
		h1 {
			font-size: calc(var(--font-size-heading) + 2px);
		}

		.link {
			font-size: 15px;
		}
	}
</style>
