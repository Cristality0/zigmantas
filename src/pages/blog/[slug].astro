---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { formatDate } from "../../utils/date";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={`${post.data.title} - Jovaras Zigmantas`}
  description={post.data.description}
>
  <div class="page-container">
    <article class="article">
      <header class="header">
        <a href="/blog" class="back-link">&larr; Back to Blog</a>
        <h1>{post.data.title}</h1>
        <div class="meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
          <span class="author">by {post.data.author}</span>
        </div>
      </header>

      <div class="content">
        <Content />
      </div>

      <footer class="footer">
        <a href="/blog" class="back-link">&larr; Back to Blog</a>
      </footer>
    </article>
  </div>
</Layout>

<style>
  .article {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-content-xl);
  }

  .header {
    margin-bottom: var(--spacing-content-2xl);
    padding-bottom: var(--spacing-content-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-secondary);
    text-decoration: none;
    margin-bottom: var(--spacing-content-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  h1 {
    font-size: 2.5rem;
    color: var(--color-text-primary);
    margin: 0 0 var(--spacing-content-md) 0;
    line-height: 1.2;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-content-md);
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-content-md);
  }

  .author {
    color: var(--color-text-secondary);
  }

  /* Markdown Content Styling */
  .content {
    color: var(--color-text-secondary);
    line-height: 1.8;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3),
  .content :global(h4) {
    color: var(--color-text-primary);
    margin-top: var(--spacing-content-2xl);
    margin-bottom: var(--spacing-content-md);
  }

  .content :global(h1) {
    font-size: 2rem;
  }

  .content :global(h2) {
    font-size: 1.5rem;
  }

  .content :global(h3) {
    font-size: 1.25rem;
  }

  .content :global(h4) {
    font-size: 1.1rem;
  }

  .content :global(p) {
    margin-bottom: var(--spacing-content-md);
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    transition: opacity var(--transition-fast);
  }

  .content :global(a:hover) {
    opacity: 0.8;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: var(--spacing-content-md);
    padding-left: var(--spacing-content-lg);
  }

  .content :global(li) {
    margin-bottom: var(--spacing-content-sm);
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--spacing-content-md);
    margin: var(--spacing-content-lg) 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .content :global(code) {
    background: rgba(30, 41, 59, 0.6);
    padding: 2px 6px;
    border-radius: 4px;
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-content-md);
    overflow-x: auto;
    margin: var(--spacing-content-lg) 0;
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .content :global(strong) {
    color: var(--color-text-primary);
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--spacing-content-2xl) 0;
  }

  .footer {
    margin-top: var(--spacing-content-2xl);
    padding-top: var(--spacing-content-lg);
    border-top: 1px solid var(--color-border);
  }

  @media screen and (max-width: 640px) {
    .article {
      padding: var(--spacing-content-md);
    }

    h1 {
      font-size: 1.75rem;
    }

    .content :global(h2) {
      font-size: 1.25rem;
    }

    .content :global(pre) {
      font-size: 0.85rem;
    }
  }
</style>
